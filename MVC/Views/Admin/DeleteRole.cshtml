@model MVC.Models.AdminViewModels.RoleViewModel

@{
    ViewData["Title"] = "Delete Role";
}
<div class="container-sub">
    <h2>@ViewData["Title"]</h2>
    <h3>Are you sure you want to delete this role?</h3>
    <div>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <dl class="dl-horizontal">
            <dt style="width: 90px;">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd style="margin-left:100px;">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt style="width: 90px;">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd style="margin-left:100px;">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
        <form asp-controller="Admin" asp-action="DeleteRole" method="post" class="form-horizontal">
            <a asp-action="RoleIndex" class="btn btn-primary">Cancel</a>
            <input type="submit" value="Delete" class="btn btn-primary" />
        </form>
    </div>
</div>